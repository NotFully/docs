        "x-code-samples": [
          {
            "lang": "curl",
            "source": "curl -X PATCH 'https://api.spellit.ai/api/item-set/upload?item_set_id=123' \\\n  -H 'API-Access-Key: your-api-key' \\\n  -F 'files=@audio1.mp3'"
          },
          {
            "lang": "python",
            "source": "import requests\n\nurl = 'https://api.spellit.ai/api/item-set/upload?item_set_id=123'\nheaders = {'API-Access-Key': 'your-api-key'}\nfiles = [('files', open('audio1.mp3', 'rb'))]\n\nresponse = requests.patch(url, headers=headers, files=files)\nprint(response.json())"
